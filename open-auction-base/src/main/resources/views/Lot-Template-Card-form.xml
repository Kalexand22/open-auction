<?xml version="1.0"?>
<object-views xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns="http://axelor.com/xml/ns/object-views">
  <grid name="lot-template-list-grid" title="Liste des modèles de lot"
    model="com.axelor.apps.openauction.db.LotTemplate">
    <field name="code"/>
    <field name="description"/>
    <field name="sectorCode"/>
    <field name="lotNatureCode"/>
  </grid>

  <form name="lot-template-card-form" title="Modèle de lot"
    model="com.axelor.apps.openauction.db.LotTemplate">
    <panel name="MainPanel"/>
    <panel-tabs name="panelTab1">
      <panel title="Général" name="general">
        <field name="code"/>
        <field name="description"/>
        <field name="sectorCode"/>
        <field name="lotNatureCode"/>
        <field name="defaultExpert"/>
        <field name="catalogTemplateExist"/>
        <field name="templateDescriptionExist"/>
        <field name="locationCode"/>
        <field name="defaultBinCode"/>
        <field title="Unité de Poids" name="weightUnit"/>
        <field title="Unité de volume" name="cubageUnit"/>
        <field name="unitofMeasure"/>
      </panel>
      <panel title="Ventes" name="ventes">
        <field name="valueSearch"/>
        <field name="searchMethod"/>
        <field name="defaultLotSize"/>
        <field name="defaultLotQuantity"/>
        <field name="valuationAtBest"/>
        <field name="bidPriceIncrement"/>
        <field name="maxSalePeriod"/>
        <field name="auctionProdPostingGroup"/>
        <field name="vATProdPostingGroup"/>
        <field name="lotMissionPriceGroup"/>
        <field name="lotAuctionPriceGroup"/>
        <field name="addedValueType"/>
      </panel>
      <panel title="Information" name="information">
        <field name="ungroupingAuthorization"/>
        <field name="groupingAuthorization"/>
        <field name="specialEquipmentCode"/>
        <field name="propertyRegister"/>
        <field name="nobleMetalRegister"/>
        <field name="weaponRegister"/>
        <field name="specificityCode"/>
        <field name="lotCategorie4Code"/>
        <field name="eUTariffNumber"/>
        <field name="lotCategorie3Code"/>
        <field name="lotCategorie2Code"/>
        <field name="internetBroadcasting"/>
        <field name="lotCategorie1Code"/>
        <field name="averageCatalogPages"/>
      </panel>
    </panel-tabs>
  </form>
</object-views>
