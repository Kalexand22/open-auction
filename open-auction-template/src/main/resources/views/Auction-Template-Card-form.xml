<?xml version="1.0"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.4.xsd">

  <grid name="auction-template-grid" title="Modèles de vente"
    model="com.axelor.apps.openauction.db.AuctionTemplate">
    <field name="code"/>
    <field name="description"/>
    <field name="auctionType"/>
    <field name="vehicleAuction"/>
    <field name="equipmentAuction"/>
    <field name="auctionnerCode"/>
    <field name="responsibilityCenter"/>
    <field name="activityCodeToHeader"/>
    <field name="activityCodeToLines"/>
  </grid>

  <form name="auction-template-form" title="Modèles de vente" width="large"
    model="com.axelor.apps.openauction.db.AuctionTemplate">
    <panel name="MainPanel"/>
    <panel-tabs name="panelTab1">
      <panel title="Général" name="general">
        <field name="code"/>
        <field name="description"/>
        <field name="responsibilityCenter"/>
        <field name="auctionRoom"/>
        <field name="auctionnerCode"/>
        <field name="auctionType"/>
        <field name="auctionStartTime"/>
        <field name="auctionEndTime"/>
        <field name="bidPriceIncrement"/>
        <field name="buyerInvoiceUnit"/>
        <field name="inventoryRemovalDocument"/>
        <field name="lotReportDescription"/>
        <field name="startingReasonCode"/>
        <field name="bidPaddleSetCode"/>
        <field name="bidCardNoAuthorized"/>
        <field name="defaultBuyerContactTemplate"/>
        <field name="defaultLotTemplate"/>
        <field name="formNo"/>
        <field name="vehicleAuction"/>
        <field name="equipmentAuction"/>
        <field name="noSeries"/>
        <field name="autoSearchBuyer"/>
        <field name="retiredLotonSellerInvoice"/>
        <field name="defaultBondAmount"/>
        <field name="defaultBondMode"/>
        <field name="salespersonCode"/>
        <field name="auctionSupportReportNo"/>
        <field name="manualCatalog"/>
        <field name="auctionListReportNo"/>
        <field name="internetAuction"/>
        <field name="salespersonCommission"/>
        <field name="distraineeSupportReportNo"/>
        <field name="auctionReportNo"/>
        <field name="pricesIncludingVAT"/>
      </panel>
      <panel title="Comptabilisation" name="comptabilisation">
        <field name="paymentMethod"/>
        <field name="centralizedCustomerTemplate"/>
        <field name="buyerSourceCode"/>
        <field name="sellerSourceCode"/>
        <field name="centralizedVendorTemplate"/>
      </panel>
      <panel title="Activités" name="activites">
        <field name="activityCodeToLines"/>
        <field name="activityCodeToHeader"/>
      </panel>
      <panel title="Divers" name="divers">
        <field name="modifiedBy"/>
        <field name="lastModified"/>
        <field name="createdBy"/>
        <field name="createDate"/>
      </panel>
    </panel-tabs>
    <panel-tabs name="panelTab2">
      <panel title="Prestations" name="prestations"/>
      <panel title="Actions" name="actions"/>
      <panel title="Interactions" name="interactions"/>
    </panel-tabs>
    <panel-tabs name="panelTab3">
      <panel title="Prestations" name="prestations"/>
      <panel title="Actions" name="actions"/>
      <panel title="Interactions" name="interactions"/>
    </panel-tabs>
  </form>
</object-views>
